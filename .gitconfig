[include]
  path = ~/.config/delta/themes.gitconfig

[user]
	email = no-prophet@proton.me
	name = daxisunder

[github]
  user = daxisunder

[core]
  pager = delta --side-by-side -w ${FZF_PREVIEW_COLUMNS:-$COLUMNS}
  ignoreCase = true

[apply]
  whitespace = fix

[grep]
  lineNumber = true

[init]
  defaultBranch = main

[branch]
  sort = -committerdate

[color]
  ui = true

[log]
  decorate = short
	date = iso

[help]
  autocorrect = prompt

[interactive]
  diffFilter = delta --color-only --features=interactive

[delta]
  dark = true
  features = arctic-fox,decorations,side-by-side
  hyperlinks = true
  line-numbers = true
  navigate = true
  side-by-side = true
  true-color = always

[diff]
  colorMoved = default
  tool = delta

[merge]
    conflictStyle = zdiff3

[mergetool "nvimdiff"]
	layout = LOCAL,BASE@,REMOTE

[pull]
	rebase = false

[credential "https://github.com"]
	helper = !/usr/bin/gh auth git-credential

[credential "https://gist.github.com"]
	helper = !/usr/bin/gh auth git-credential
